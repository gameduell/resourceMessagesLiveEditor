.page-scroll
  .page-scroll--content
    #menuNavigationFrom.menuNavigation.language(canny-mod='projectMainNavigation', canny-var='from')
      // place holder for the menu navigation
    label Project manager
    .menuNavigation.manager
      ul.navigationMenu.manager
        li(canny-mod='translationView', canny-var='projectShow')
          span Create new category
          span.icon.octicon.octicon-tag
        li
          a(canny-mod='projectMainNavigation', canny-var='enableEditorMode')
            span Enable edit buttons
            span.icon.octicon.octicon-pencil
        li
          a(canny-mod='projectMainNavigation', canny-var='toggleWordCount')
            span Toggle word count
            span.icon.octicon.octicon-graph
        li.privileged
          a(canny-mod='projectMainNavigation', canny-var='showCopyModal')
            span Import/Clone project
            span.icon.octicon.octicon-clippy
    label Developer menu
    .menuNavigation.developer
      ul.navigationMenu.developer
        li
          a(canny-mod='projectMainNavigation', canny-var='showMessageBundleFormat')
            span Show as message bundles
            span.icon.octicon.octicon-squirrel
        li
          a(canny-mod='projectMainNavigation', canny-var='showJSONBundle')
            span Show as JSON
            span.icon.octicon.octicon-eye
        li
          a(canny-mod='projectMainNavigation', canny-var='showJMBFUploader')
            span Upload message bundle
            span.icon.octicon.octicon-hubot
        li
          a(canny-mod='projectMainNavigation', canny-var='showJSONImport')
            span Upload json bundle
            span.icon.octicon.octicon-beaker
        li.privileged
          a(canny-mod='projectMainNavigation', canny-var='showJsonEditor')
            span Edit content in JSON format
            span.icon.octicon.octicon-code
    label Info and help
    .menuNavigation.infoHelp
      ul.navigationMenu.infoHelp
        li
          a(href='https://confluence.gameduell.de/display/MOBS/Language+properties+tool', target='_blank')
            span About translation tool
            span.icon.octicon.octicon-light-bulb
        li
          a(href='https://github.com/eightyfour/resourceMessagesLiveEditor', target='_blank')
            span.icon.octicon.octicon-octoface
    div(style='clear: both;')